{
  "name": "igi2-mef-viewer-desktop",
  "version": "2.0.0",
  "description": "IGI2 MEF Model Viewer - Complete Desktop Application with RES Support",
  "main": "main.js",
  "author": "IGI2 Tools Community",
  "license": "MIT",
  "homepage": "https://github.com/igi2-tools/mef-viewer",
  "repository": {
    "type": "git",
    "url": "https://github.com/igi2-tools/mef-viewer"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder",
    "dist": "electron-builder --publish=never",
    "dist-all": "electron-builder --win --mac --linux --publish=never"
  },
  "build": {
    "appId": "com.igi2tools.mef-viewer",
    "productName": "IGI2 MEF Viewer",
    "directories": {
      "output": "../electron-dist"
    },
    "files": [
      "../dist/**/*",
      "package.json",
      "main.js",
      "preload.js"
    ],
    "extraMetadata": {
      "name": "igi2-mef-viewer"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable", 
          "arch": "x64"
        }
      ],
      "icon": "../public/icon-512.png",
      "artifactName": "IGI2-MEF-Viewer-${version}-${os}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "../public/icon-512.png",
      "artifactName": "IGI2-MEF-Viewer-${version}-${os}-${arch}.${ext}",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": "x64"
        }
      ],
      "icon": "../public/icon-512.png",
      "artifactName": "IGI2-MEF-Viewer-${version}-${os}-${arch}.${ext}",
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "displayLanguageSelector": true,
      "installerLanguages": ["en", "ar"],
      "license": "../LICENSE"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "igi2-tools",
        "repo": "mef-viewer"
      }
    ]
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  }
}